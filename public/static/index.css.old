 h1 {
   text-align: center;
 }

 p {
   margin: auto;
   padding: .5rem;
   width: 75vw;
 }

 div>img {
   border: 1px solid #ddd;
   padding: 10px;
 }

 .tag {
   font-style: italic;
   font-size: 1.5em;
 }

 .container {
   margin: auto;
   display: grid;
   grid-template-columns: 1fr 1fr;
   grid-template-rows: 1fr;
   gap: 5px 5px;
   grid-auto-flow: row;
   grid-template-areas:
     "welcome logins";
   width: 80vw;
   height: 90vh;
 }

 .welcome {
   grid-area: welcome;
 }

 .logins {
   grid-area: logins;
 }
